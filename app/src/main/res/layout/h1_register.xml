<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="411dp"
        android:layout_height="223dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/h_logo" />

    <TextView
        android:id="@+id/txtSign"
        android:layout_width="349dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/_30dp"
        android:background="@drawable/rounded10_darkblue_bg"
        android:gravity="center"
        android:onClick="onClick"
        android:paddingVertical="@dimen/_10dp"
        android:text="Signup"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView29"
        app:layout_constraintStart_toStartOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <EditText
        android:id="@+id/textView28"
        android:layout_width="346dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:background="@color/app_color"
        android:hint="Name"
        android:textColor="#0E0E0E"
        android:textColorHint="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView21" />

    <EditText
        android:id="@+id/textView26"
        android:layout_width="346dp"
        android:layout_height="58dp"
        android:layout_marginTop="52dp"
        android:background="@color/app_color"
        android:hint="Email"
        android:textColor="#0E0E0E"
        android:textColorHint="@color/black"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <EditText
        android:id="@+id/textView29"
        android:layout_width="346dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:background="@color/app_color"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#0E0E0E"
        android:textColorHint="@color/black"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/textView26"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an Account?"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtSign"
        app:layout_constraintHorizontal_bias="0.239"
        app:layout_constraintStart_toStartOf="@+id/txtSign"
        app:layout_constraintTop_toBottomOf="@+id/txtSign" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/Dark_blue"
        app:layout_constraintEnd_toEndOf="@+id/txtSign"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toEndOf="@+id/textView27"
        app:layout_constraintTop_toTopOf="@+id/textView27" />

</androidx.constraintlayout.widget.ConstraintLayout>