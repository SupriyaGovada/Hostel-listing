    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="29dp"
        android:layout_height="22dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView23"
